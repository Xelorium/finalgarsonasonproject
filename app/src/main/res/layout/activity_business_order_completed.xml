<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".businessOrderCompletedActivity"
    android:orientation="vertical"
    android:background="#69A3D400"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="TAMAMLANAN SİPARİŞLER"
            android:gravity="center"
            android:textColor="#35E43C"
            android:textStyle="bold"
            android:layout_weight="15">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textColor="#35E43C"
            android:text="--------------------------------------------"
            android:layout_gravity="center"
            android:layout_weight="5">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TAMAMLANAN BİR SİPARİŞ BULUNMAMAKTADIR."
            android:id="@+id/ordersDone3"
            android:textStyle="bold"
            android:textColor="#FF0101"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:visibility="gone">

        </TextView>

        <ListView
            android:id="@+id/gelenSiparis"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80">

        </ListView>





    </LinearLayout>


</LinearLayout>