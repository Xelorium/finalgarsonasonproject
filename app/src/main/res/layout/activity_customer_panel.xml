<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical"
    tools:context=".loginActivity"
    android:weightSum="100"
    android:background="#69A3D400">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:weightSum="50">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customerPostUserId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_button_red"
                android:id="@+id/customerPostLogoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Çıkış Yap" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="65"
        android:orientation="vertical"
        android:gravity="bottom">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="HOŞGELDİNİZ!"
            android:textColor="#FFC107"
            android:textSize="50dp"
            app:fontFamily="@font/acme">

        </TextView>

        <Button
            android:background="@drawable/custom_button"
            android:id="@+id/customerOrdersButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SİPARİŞLERİM"
            android:layout_marginBottom="15dp">

        </Button>

        <Button
            android:background="@drawable/custom_button"
            android:layout_gravity="center"
            android:id="@+id/customerMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENÜYÜ GÖSTER"
            android:layout_marginBottom="15dp">

        </Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="20"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="5"
            android:gravity="bottom">

            <Button
                android:background="@drawable/custom_button_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İşletme değİştİr"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/customerChangeisId">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:gravity="bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="5">

            <Button
                android:id="@+id/support_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:text="Destek/Yardım"
                android:textSize="15dp"
                android:visibility="invisible" />

            <Button
                android:background="@drawable/custom_button_misc"
                android:id="@+id/reportBug_Button"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:text="Hata Bİldİr"
                android:textSize="15dp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>