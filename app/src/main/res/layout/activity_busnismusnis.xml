<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".businessOrderIdleActivity"
    android:orientation="vertical"
    android:background="#69A3D400">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:id="@+id/customerNameTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:gravity="center"
            android:text="GELEN SİPARİŞLER"
            android:textColor="#E31919"
            android:textStyle="bold"
            app:fontFamily="@font/acme">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="--------------------------------------------"
            android:layout_gravity="center"
            android:textColor="#E31919"
            android:layout_weight="5">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TÜM SİPARİŞLER TAMAMLANMIŞTIR."
            android:id="@+id/ordersDone"
            android:textStyle="bold"
            android:textColor="#10D818"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:visibility="gone">

        </TextView>

        <ListView
            android:id="@+id/idleListView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80">

        </ListView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="Gerİ Dön"
            android:background="@drawable/custom_button"
            android:id="@+id/businessGetBackButton">

        </Button>


    </LinearLayout>

</LinearLayout>